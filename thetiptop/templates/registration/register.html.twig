{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}


<div class="container">
    <div class="row justify-content-center align-items-center">

        <div class="col-8">
            <h1 class="text-center my-5">Inscription</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'row g-3'}}) }}
            <div class="form-floating col-6">
                {{ form_widget(registrationForm.firstName) }}
                {{ form_label(registrationForm.firstName) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>
            <div class="form-floating col-6">
                {{ form_widget(registrationForm.lastName) }}
                {{ form_label(registrationForm.lastName) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>
            <div class="form-floating col-6">
                {{ form_widget(registrationForm.tel) }}
                {{ form_label(registrationForm.tel) }}
                {{ form_errors(registrationForm.tel) }}
            </div>

            <div class="form-floating col-6">
                {{ form_widget(registrationForm.email) }}
                {{ form_label(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-floating col-6" data-controller="password-visibility">
                {{ form_widget(registrationForm.password.first) }}
                {{ form_label(registrationForm.password.first) }}
                {{ form_errors(registrationForm.password.first) }}
            </div>
            <div class="form-floating col-6">
                {{ form_widget(registrationForm.password.second) }}
                {{ form_label(registrationForm.password.second) }}
                {{ form_errors(registrationForm.password.second) }}
            </div>
            <div class="col-6">
                {{ form_label(registrationForm.dateOfBirth) }}
                {{ form_widget(registrationForm.dateOfBirth) }}
                {{ form_errors(registrationForm.dateOfBirth) }}
            </div>
            <div class="form-floating col-12">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-outline-success">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}