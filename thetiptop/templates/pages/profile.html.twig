{% extends 'base.html.twig' %}

{% block title %}Mon profile{% endblock %}

{% block body %}
<section id="profile" class="first-item">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <h1>Mon profile</h1>
                {{ form_start(profileForm, {'attr': {'class': 'row g-3'}}) }}
                <div class="form-floating col-6">
                    {{ form_widget(profileForm.firstName) }}
                    {{ form_label(profileForm.firstName) }}
                    {{ form_errors(profileForm.firstName) }}
                </div>
                <div class="form-floating col-6">
                    {{ form_widget(profileForm.lastName) }}
                    {{ form_label(profileForm.lastName) }}
                    {{ form_errors(profileForm.lastName) }}
                </div>
                <div class="form-floating col-6">
                    {{ form_widget(profileForm.tel) }}
                    {{ form_label(profileForm.tel) }}
                    {{ form_errors(profileForm.tel) }}
                </div>

                <div class="form-floating col-6">
                    {{ form_widget(profileForm.email) }}
                    {{ form_label(profileForm.email) }}
                    {{ form_errors(profileForm.email) }}
                </div>
                <div class="form-floating col-6" data-controller="password-visibility">
                    {{ form_widget(profileForm.password.first) }}
                    {{ form_label(profileForm.password.first) }}
                    {{ form_errors(profileForm.password.first) }}
                </div>
                <div class="form-floating col-6">
                    {{ form_widget(profileForm.password.second) }}
                    {{ form_label(profileForm.password.second) }}
                    {{ form_errors(profileForm.password.second) }}
                </div>
                <div class="col-6">
                    {{ form_label(profileForm.dateOfBirth) }}
                    {{ form_widget(profileForm.dateOfBirth) }}
                    {{ form_errors(profileForm.dateOfBirth) }}
                </div>
                <div class="form-floating col-12">
                    {{ form_widget(profileForm.agreeTerms) }}
                    {{ form_label(profileForm.agreeTerms) }}
                    {{ form_errors(profileForm.agreeTerms) }}
                </div>

                <button type="submit" class="btn btn-outline-success w-50 mx-auto">Modifier</button>
                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}