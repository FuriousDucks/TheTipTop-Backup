{% extends 'base.html.twig' %}

{% block title %}Participer{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <h1 class="text-center">Participez à notre jeu concours</h1>
        <form action="{{ path('luck') }}" method="post" class="row g-3 justify-content-center col-12 col-md-6 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
            <div class="form-floating col-12">
                <input type="number" class="form-control" id="ticketNumber" name="ticketNumber"
                    placeholder="Numéro de ticket">
                <label for="ticketNumber">Numéro de ticket</label>

            </div>
            <div class="col-12 d-flex justify-content-center align-items-end">
                <button type="submit" class="button btn-lg btn-success p-3 h-100 w-75 mx-auto">Tentez votre chance</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('participate') }}
{% endblock %}