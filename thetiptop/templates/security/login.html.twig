{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row justify-content-center align-items-center py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="col-sm-12 col-md-6" role="document">
        <div class="modal-content rounded-4 shadow">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="modal-body p-5 pt-0">
                <form method="post">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control rounded-3" id="floatingInput"
                            placeholder="utilisateur@example.com" value="{{ last_username }}" name="email">
                        <label for="floatingInput" autofocus>Adresse email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control rounded-3" id="floatingPassword"
                            placeholder="Password" autocomplete="current-password" name="password">
                        <label for="floatingPassword">Mot de passe</label>
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="w-50 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Inscription</button>
                    <br>
                    <small class="text-muted">En cliquant sur "Inscription", vous acceptez nos conditions d'utilisation
                        et
                        notre politique de confidentialit√©.</small>
                    <hr class="my-4">
                    <h2 class="fs-5 fw-bold mb-3">Ou utilisez un tiers</h2>
                    <div class="d-flex">
                        <button class="w-70 btn btn-outline-primary rounded-3 me-2" type="submit">
                            <i class="fab fa-facebook fs-2" aria-hidden="true"></i>
                        </button>
                        <button class="w-70 btn btn-outline-success rounded-3" type="submit">
                            <i class="fab fa-google fs-2" aria-hidden="true"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}